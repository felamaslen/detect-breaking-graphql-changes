{
  "name": "detect-breaking-graphql-changes",
  "version": "0.0.1",
  "description": "GitHub Action to detect breaking changes on a GraphQL schema",
  "main": "dist/index.js",
  "bin": {
    "detect-breaking-graphql-changes": "dist/cli.js"
  },
  "scripts": {
    "build": "rollup -c",
    "test": "vitest",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "package": "yarn build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felamaslen/detect-breaking-graphql-changes.git"
  },
  "keywords": ["github-action", "graphql", "schema", "breaking-changes"],
  "author": "felamaslen",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "graphql": "^16.8.1",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@rollup/plugin-commonjs": "^26.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^20.8.0",
    "@types/pluralize": "^0.0.33",
    "fake-tag": "^2.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.1.2",
    "rollup": "^4.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.2.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=24.1.0"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610",
  "lint-staged": {
    "*.{ts,js,tsx,jsx,json}": ["biome format --write", "biome check --write"]
  }
}
